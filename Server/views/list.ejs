<html>

<head>
    <meta charset="utf-8">
    <title>게시글</title>
</head>

<body>
    <h2>데이터 리스트</h2>
    <table border='1' style="text-align: center;">
        <thead>
            <tr bgcolor="#D5E5FF">
                <th width="70"; text-align=center>번호</th>
                <th width="500">URL</th>
                <th width="150">브랜드 네임</th>
                <th width="350">상품명</th>
                <th width="100">가격</th>
            </tr>
        </thead>
        <tbody>
            <% 
             var a = [];
            for(i=0; i < list.length; i++) { 
               %>
                <tr>
                    <td>
                        <%=i+1 %>
                    </td>
                    <td>
                        <%=list[i].url %>
                    </td>
                    <td>
                        <%=list[i].brand_name %>
                    </td>
                    <td>
                        <%=list[i].product_name %>
                    </td>
                    <td>
                        <%=list[i].price %>
                    </td>
                </tr>
                    <% 
                    var product = {
                        id: list[i].id,
                        url: list[i].url,
                        brand_name: list[i].brand_name,
                        product_name: list[i].product_name,
                        price: list[i].price
                    };
                    a.push(product);
                    
                    %>

                <% } %>
                <% var productt = {
                    product: a
                }
                var accountStr = JSON.stringify(productt);
                    console.log(accountStr);%>
        </tbody>
    </table>


</body>

</html>